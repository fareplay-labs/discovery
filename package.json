{
  "name": "@fareplay/discovery",
  "version": "1.0.0",
  "description": "FarePlay Discovery Service - Registry and metadata hub for Fare Protocol casinos",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "docker:build": "docker build -t fareplay-discovery .",
    "docker:run": "docker run -p 3000:3000 fareplay-discovery",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "fareplay",
    "fare-protocol",
    "casino",
    "discovery",
    "registry"
  ],
  "author": "FarePlay",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@prisma/client": "^5.19.1",
    "@solana/web3.js": "^1.95.2",
    "bs58": "^6.0.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "pino": "^9.3.2",
    "pino-pretty": "^11.2.2",
    "tweetnacl": "^1.0.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@fareplay/sdk": "file:../sdk",
    "@types/bs58": "^4.0.4",
    "@types/node": "^22.5.0",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@typescript-eslint/parser": "^8.2.0",
    "@vitest/coverage-v8": "^2.0.5",
    "dotenv-cli": "^7.4.2",
    "eslint": "^9.9.1",
    "prettier": "^3.3.3",
    "prisma": "^5.19.1",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}

